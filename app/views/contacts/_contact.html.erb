



<li class="swipeout">
  <div class="swipeout-content item-content">
    <div class="item-inner">
    	<a href="#" class="actions" data-name="<%= [contact.name,contact.company_name].reject(&:blank?).first %>" data-phone="<%= (!contact.mobile.strip.blank? rescue nil) ? contact.mobile : "Unknown" %>" data-contact="<%= contact.id %>" data-email="<%= contact.email %>">
      	<div class="item-title">
      		<%= [contact.name,contact.company_name].reject(&:blank?).first %>
					<br>
					<span><i class="i-phone"></i> <%= (!contact.mobile.strip.blank? rescue nil) ? contact.mobile : "Unknown" %></span>
				</div>
    	</a>
    </div><!-- item inner -->
  </div><!-- item content -->
  <!-- swipe to delete
  =================================== -->
  <div class="swipeout-actions">
    <div class="swipeout-actions-inner">
      <!-- Add this button and item will be deleted automatically -->
      <a href="#" data-confirm="Are you sure you want to delete this contact?"  class="swipeout-delete">Delete</a>
    </div>
  </div>
</li>